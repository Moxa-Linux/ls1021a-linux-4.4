/dts-v1/;
#include "ls1021a.dtsi"

/ {
	model = "MOXA UC8410A";

	aliases {
		enet0_rgmii_phy = &rgmii_phy0;
		enet1_rgmii_phy = &rgmii_phy1;
		enet2_rgmii_phy = &rgmii_phy2;
	};

	sys_mclk: clock-mclk {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <24576000>;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_3p3v: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};
	};

	leds {
		compatible = "gpio-leds";

		str_led {
			label = "UC8410A:RED:PROG";
			gpios = <&gpio1 16 0>;
			default-state = "off";
		};

		sw_ready {
			label = "UC8410A:GREEN:SWRDY";
			gpios = <&gpio1 18 0>;
			default-state = "off";
		};
		
		prog_led0 {
			label = "UC8410A:GREEN:PROG2";
			gpios = <&gpio4 14 0>;
			default-state = "off";
		};

		prog_led1 {
			label = "UC8410A:GREEN:PROG1";
			gpios = <&gpio4 15 0>;
			default-state = "off";
		};

		prog_led2 {
			label = "UC8410A:GREEN:PROG0";
			gpios = <&gpio4 16 0>;
			default-state = "off";
		};

		wifi_signal0 {
			label = "UC8410A:GREEN:CEL2";
			gpios = <&gpio4 17 0>;
			default-state = "off";
		};

		wifi_signal1 {
			label = "UC8410A:GREEN:CEL1";
			gpios = <&gpio4 18 0>;
			default-state = "off";
		};

		wifi_signal2 {
			label = "UC8410A:GREEN:CEL0";
			gpios = <&gpio4 19 0>;
			default-state = "off";
		};

		cpu_diag_red {
			label = "UC8410A:RED:DIA";
			gpios = <&gpio4 20 0>;
			default-state = "off";
		};

		cpu_diag_green {
			label = "UC8410A:GREEN:DIA";
			gpios = <&gpio4 21 0>;
			default-state = "off";
		};

		cpu_diag_yellow {
			label = "UC8410A:YELLOW:DIA";
			gpios = <&gpio4 22 0>;
			default-state = "off";
		};

	};

	beeper: beeper {
		compatible = "gpio-beeper";
		gpios = <&gpio1 20 0>;
	};

	gpio-keys {
		compatible = "gpio-keys";
		reset-key {
			label = "Reset key";
			gpios = <&gpio1 21 1>;
			linux,code = <69>;
			default-state = "on";
		};
	};
	

};


&dspi1 {
	bus-num = <0>;
	status = "disabled";

};

&enet0 {
	phy-handle = <&rgmii_phy0>;
	phy-mode = "rgmii-id";
	status = "okay";
};

&enet1 {
	phy-handle = <&rgmii_phy1>;
	phy-mode = "rgmii-id";
	status = "okay";
};

&enet2 {
	phy-handle = <&rgmii_phy2>;
	phy-mode = "rgmii-id";
	status = "okay";
};

&i2c0 {
	status = "okay";
	/* clock-frequency = <400000>; */
	clock-frequency = <100000>;

   rtc@68 {
	compatible = "dallas,ds1374";
	reg = <0x68>;
    };

    tpm {
      compatible = "infineon,slb9635tt";
      reg = <0x20>;
    };
};

&i2c1 {
	status = "okay";
	codec: sgtl5000@a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		VDDA-supply = <&reg_3p3v>;
		VDDIO-supply = <&reg_3p3v>;
		clocks = <&sys_mclk 1>;
	};
};

&i2c2 {
	status = "disabled";
	monitor: ltc2945@67 {
		reg = <0x67>;
	};
};

&ifc {
	status = "disabled";
	#address-cells = <2>;
	#size-cells = <1>;
	/* NOR Flash on board */
	ranges = <0x0 0x0 0x0 0x60000000 0x08000000>;

	nor@0,0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "cfi-flash";
		reg = <0x0 0x0 0x8000000>;
		bank-width = <2>;
		device-width = <1>;
	};
};

&lpuart0 {
	status = "okay";
};

&mdio0 {
	rgmii_phy0: ethernet-phy@0 {
		compatible = "marvell,88e1118";
		reg = <0x0>;
		marvell,reg-init =
			/* marvell,reg-init = <reg-page reg mask value> */
			<3 0x11 0 0x4415>, /* Reg 3,17 */
			<3 0x10 0 0x77>; /* Reg 3,16 */
	};

	rgmii_phy1: ethernet-phy@1 {
		compatible = "marvell,88e1118";
		reg = <0x1>;
		marvell,reg-init =
			/* marvell,reg-init = <reg-page reg mask value> */
			<3 0x11 0 0x4415>, /* Reg 3,17 */
			<3 0x10 0 0x77>; /* Reg 3,16 */
	};

	rgmii_phy2: ethernet-phy@2 {
		compatible = "marvell,88e1118";
		reg = <0x2>;
		marvell,reg-init =
			/* marvell,reg-init = <reg-page reg mask value> */
			<3 0x11 0 0x4415>, /* Reg 3,17 */
			<3 0x10 0 0x77>; /* Reg 3,16 / LED[0]:orange LED[1]:green, 4bit per LED */
	};
	tbi1: tbi-phy@1f {
		reg = <0x1f>;
		device_type = "tbi-phy";
	};
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&sai1 {
	status = "okay";
};

&sata {
        status = "okay";
};

&pwm6 {
	status = "okay";
};

&pwm7 {
	status = "okay";
};

&qspi {
    status = "okay";
    bus-num = <0>;
    fsl,spi-num-chipselects = <2>;
    fsl,spi-flash-chipselects = <0>;
    fsl,qspi-has-second-chip;

    qflash0: qspi_flash@0 {
        compatible = "spansion,s25fl164k", "spansion,s25fl064l", "mx25l6405d","jedec,spi-nor";
        spi-max-frequency = <20000000>;
        reg = <0>;

        partitions { /*according to kernel Document, must be "partitions", note the 's'*/
            compatible = "fixed-partitions";
            #address-cells = <1>;
            #size-cells = <1>;

            U-Boot@0 {
                label = "U-Boot";
                reg = <0x0 0x180000>;
            };
            U-Boot_Env@180000 {
                label = "U-Boot Env";
                reg = <0x180000 0x40000>;
            };
        };
    };
};

